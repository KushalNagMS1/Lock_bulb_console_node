<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Security - Locked</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-family: 'Arial', sans-serif;
      background-color: #222;
      color: #fff;
    }

    .container {
      text-align: center;
      padding: 20px;
    }

    .status {
      font-size: 30px;
      font-weight: bold;
      color: #61dafb;
      margin-bottom: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }

    .status i {
      font-size: 25px;
      color: #61dafb;
    }

    .lock-icon {
      font-size: 80px;
      margin-bottom: 20px;
    }

    .swipe-container {
      position: relative;
      width: 300px;
      height: 50px;
      background: #444;
      border-radius: 25px;
      margin: 20px auto;
      overflow: hidden;
      display: flex;
      align-items: center;
    }

    .swipe-bar {
      position: absolute;
      height: 100%;
      width: 50px;
      border-radius: 25px;
      background: linear-gradient(90deg, #61dafb, #21a1f1);
      cursor: pointer;
      transition: transform 0.3s ease;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swipe-bar i {
      font-size: 20px;
      color: #fff;
    }

    .swipe-text {
      position: absolute;
      color: #aaa;
      width: 100%;
      text-align: center;
      font-size: 14px;
      pointer-events: none;
      user-select: none;
    }

    .instructions {
      font-size: 16px;
      color: #bbb;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="lock-icon">
      ðŸ”’
    </div>
    <div class="status">
      <i class="fas fa-home"></i>
      <span>House is Secured</span>
    </div>
    <div class="swipe-container" id="swipe-container">
      <div class="swipe-text" id="swipe-text">Swipe to Unlock</div>
      <div class="swipe-bar" id="swipe-bar">
        <i class="fas fa-arrow-right"></i>
      </div>
    </div>
    <div class="instructions">Keep your home safe with modern security!</div>
  </div>

  <script>
    const swipeBar = document.getElementById("swipe-bar");
    const swipeContainer = document.getElementById("swipe-container");
    const swipeText = document.getElementById("swipe-text");

    let isDragging = false;
    let startX = 0;
    let currentX = 0;

    swipeBar.addEventListener("mousedown", (e) => {
      isDragging = true;
      startX = e.clientX;
    });

    swipeBar.addEventListener("touchstart", (e) => {
      isDragging = true;
      startX = e.touches[0].clientX;
    });

    document.addEventListener("mousemove", (e) => {
      if (isDragging) {
        currentX = e.clientX - startX;
        moveSwipeBar();
      }
    });

    document.addEventListener("touchmove", (e) => {
      if (isDragging) {
        currentX = e.touches[0].clientX - startX;
        moveSwipeBar();
      }
    });

    document.addEventListener("mouseup", () => finishSwipe());
    document.addEventListener("touchend", () => finishSwipe());

    function moveSwipeBar() {
      const containerWidth = swipeContainer.offsetWidth;
      const barWidth = swipeBar.offsetWidth;

      if (currentX >= 0 && currentX <= containerWidth - barWidth) {
        swipeBar.style.transform = `translateX(${currentX}px)`;

        const progress = currentX / (containerWidth - barWidth);
        swipeBar.style.background = `linear-gradient(90deg, #61dafb ${progress * 100}%, #21a1f1)`;
      }
    }

    function finishSwipe() {
      if (!isDragging) return;
      isDragging = false;

      const containerWidth = swipeContainer.offsetWidth;
      const barWidth = swipeBar.offsetWidth;

      if (currentX >= containerWidth - barWidth) {
        // Full swipe completed
        swipeBar.style.transform = `translateX(${containerWidth - barWidth}px)`;
        setTimeout(() => {
          window.location.href = "/unlock"; // Redirect to the unlocking page
        }, 300);
      } else {
        // Reset swipe bar
        swipeBar.style.transform = "translateX(0)";
        swipeBar.style.background = "linear-gradient(90deg, #61dafb, #21a1f1)";
      }
    }
  </script>
</body>
</html>
